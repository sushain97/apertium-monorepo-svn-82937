<?xml version="1.0" encoding="UTF-8"?>
<modes>

  <mode name="pol-morph" install="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="pol.automorf.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="pol-gener" install="yes">
    <pipeline>
      <program name="lt-proc -g">
        <file name="pol.autogen.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="pol-disam" install="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="pol.automorf.bin"/>
      </program>
      <program name="cg-proc -w">
        <file name="pol.rlx.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="pol-disam-debug">
    <pipeline>
      <program name="lt-proc -w">
        <file name="pol.automorf.bin"/>
      </program>
      <program name="cg-conv -a -l" />
      <program name="vislcg3 --trace -g">
        <file name="apertium-pol.pol.rlx"/>
      </program>
    </pipeline>
  </mode>


</modes>
