<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<!-- java -jar path/to/apertium-dixtools.jar dix2tiny apertium-eu-en.eu-en.dix eu-en Basque-English j2me filter-eu-en.xml -->
<properties>
    <comment>Configuration</comment>

    <!-- force to preserve the following tags -->
    <entry key="preserveTags">n,adj,adv,vblex,vbsint,vbper</entry>

    <!-- force to ignore the following tags -->
    <entry key="ignoreTags">GD,ND,cm,sent,sint,m,f,mf,izo,izl,al,post,gen,sg,pl</entry>

    <!-- ignore tags not listed in 'preserveTags' and 'ignoreTags' properties -->
    <entry key="ignoreNotListedTags">no</entry>

    <!-- characters to remove -->
    <entry key="removeCharacters">\\*</entry>

    <!-- characters to replace with blank -->
    <entry key="replaceCharactersWithBlank">_</entry>

    <entry key="rename_n">noun</entry>
    <entry key="rename_adv">adverb</entry>
    <entry key="rename_adj">adjective</entry>
    <entry key="rename_vblex">verb</entry>
    <entry key="rename_vbsint">synthetic verb</entry>
    <entry key="rename_vbper">personal verb</entry>
<!--    <entry key="rename_adj.sint">synthetic adjective</entry> doesn't work -->
    <entry key="rename_itg">interrogative</entry>
    <entry key="rename_det">determiner</entry>
    <entry key="rename_prn">pronoun</entry>
    <entry key="rename_pos">possessive</entry>
    <entry key="rename_ij">interjection</entry>
    <entry key="rename_np">proper noun</entry>
    <entry key="rename_ant">name</entry>
    <entry key="rename_cog">surname</entry>
    <entry key="rename_loc">place</entry>
    <entry key="rename_sg">singular</entry>
    <entry key="rename_pl">plural</entry>
    <entry key="rename_spost">postposition</entry>
    <entry key="rename_pr">preposition</entry>
</properties>
