<?xml version="1.0" encoding="UTF-8"?>

<ling-resources>
   <name>My linguistic resources</name>
   <description>My linguistics resources: morphological and bilingual dictionaries, cross models, corpora, etc.</description>
  
   <resource-set>

      <name>My linguistic resources to get Basque-French language pair.</name>
      <description>Morphological and bilingual dictionaries.</description>

      <!-- cross model en-es-it -->
      <resource>
         <property name="name" value="cross-model-eu-es-fr"/>
         <property name="type" value="cross-model"/>
         <property name="sl" value="eu"/>
         <property name="tl" value="fr"/>      
         <property name="for-crossing" value="yes"/>
         <property name="src" value="cross-model-eu-es-fr.xml"/>
      </resource>
     
      <!-- cross model it-es-en -->
      <resource>
         <property name="name" value="cross-model-fr-es-eu"/>
         <property name="type" value="cross-model"/>
         <property name="sl" value="fr"/>
         <property name="tl" value="eu"/>      
         <property name="for-crossing" value="yes"/>
         <property name="src" value="cross-model.xml"/>
      </resource>
     
      <!-- 'en' morphological dictionary -->
      <resource>
         <property name="name" value="apertium-eu"/>
         <property name="type" value="mon"/>
         <property name="sl" value="eu"/>
         <property name="for-crossing" value="yes"/>
         <property name="src" value="apertium-eu-es.eu.dix"/>
      </resource>

      <!-- 'it' morphological dictionary -->
      <resource>
         <property name="name" value="apertium-fr"/>
         <property name="type" value="mon"/>
         <property name="sl" value="fr"/>
         <property name="for-crossing" value="yes"/>
         <property name="src" value="apertium-fr-es.fr.metadix"/>
      </resource>

      <!-- 'en-es' bilingual dictionary -->
      <resource>
         <property name="name" value="apertium-eu-es"/>
         <property name="type" value="bil"/>
         <property name="sl" value="eu"/>
         <property name="tl" value="es"/>
         <property name="for-crossing" value="yes"/>
         <property name="src" value="apertium-eu-es.eu-es.dix"/>
      </resource>
      
      <!-- 'es-it' bilingual dictionary -->   
      <resource>
         <property name="name" value="apertium-fr-es"/>
         <property name="type" value="bil"/>
         <property name="sl" value="fr"/>
         <property name="tl" value="es"/>
         <property name="for-crossing" value="yes"/>
         <property name="src" value="apertium-fr-es.fr-es.dix"/>
      </resource>
     
   </resource-set>
   
</ling-resources>