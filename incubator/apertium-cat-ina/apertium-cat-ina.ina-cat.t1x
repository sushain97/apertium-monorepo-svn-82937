<?xml version="1.0" encoding="UTF-8"?>
<transfer default="chunk">
  <section-def-cats>
    <def-cat n="nom">
      <cat-item tags="n.*"/>
    </def-cat>
    <def-cat n="sent">
      <cat-item tags="sent"/>
    </def-cat>
    <def-cat n="prn">
      <cat-item tags="prn.*"/>
    </def-cat>
    <def-cat n="det">
      <cat-item tags="det.*"/>
    </def-cat>
    <def-cat n="gros_adj">
      <cat-item lemma="grand" tags="adj"/>
      <cat-item lemma="gras" tags="*"/>
      <cat-item lemma="bas" tags="*"/>
    </def-cat>
    <def-cat n="verb">
      <cat-item tags="vblex.*"/>
      <cat-item tags="vbmod.*"/>
      <cat-item tags="vbser.*"/>

    </def-cat>
    <def-cat n="adj">
        <cat-item tags="adj"/> 
    </def-cat>
    <def-cat n="past">
        <cat-item tags="vblex.past.*"/> 
    </def-cat> 
    <def-cat n="num">
      <cat-item tags="num"/>
    </def-cat>
    <def-cat n="preadv">
      <cat-item tags="preadv"/>
    </def-cat>
  </section-def-cats>

  <section-def-attrs>
    <def-attr n="a_cas">
      <attr-item tags="nom"/>
    </def-attr>
    <def-attr n="temps">
           <attr-item tags="pri"/>
           <attr-item tags="pii"/>
           <attr-item tags="imp"/>
           <attr-item tags="inf"/>
           <attr-item tags="past"/>
           <attr-item tags="fut"/>
           <attr-item tags="fti"/>
           <attr-item tags="cni"/>
           <attr-item tags="pprs"/>
           <attr-item tags="pp"/>
           <attr-item tags="ger"/>

    </def-attr>
    <def-attr n="tn">
        <attr-item tags="tn"/> 
    </def-attr>

              <def-attr n="nbr">
            <attr-item tags="sg"/>
            <attr-item tags="pl"/>
            <attr-item tags="sp"/>
        </def-attr>
    <def-attr n="word_type">
      <attr-item tags="prn"/>
      <attr-item tags="vblex"/>
      <attr-item tags="n"/>
      <attr-item tags="det"/>
      <attr-item tags="adj"/>
      <attr-item tags="num"/>
      <attr-item tags="preadv"/>
    </def-attr>
    <def-attr n="defindef">
      <attr-item tags="def"/>
      <attr-item tags="ind"/>
    </def-attr>
           

        <def-attr n="gender">
          <attr-item tags="m"/>
          <attr-item tags="f"/>
          <attr-item tags="mf"/>
        </def-attr>
        <def-attr n="pers">
           <attr-item tags="p1"/>
           <attr-item tags="p2"/>
           <attr-item tags="p3"/>
        </def-attr>
  </section-def-attrs>

  <section-def-vars>
    <def-var n="number"/>
  </section-def-vars>
    <section-def-lists>
        <def-list n="gros_adjs">
    <list-item v="gros"/>
        <list-item v="bas"/>
        <list-item v="gras"/>
            </def-list>
    </section-def-lists>
  <section-def-macros>
    <def-macro n="test" npar="1">
          <let>
            <var n="number"/>
            <lit v=""/>
          </let>
    </def-macro>
  </section-def-macros>

  <section-rules>
    <rule comment="REGLA: SENT">
      <pattern>
        <pattern-item n="sent"/>
      </pattern>
      <action>
        <out>
          <chunk name="sent" case="caseFirstWord">
            <tags>
              <tag><lit-tag v="SENT"/></tag>
            </tags>
            <lu>
              <clip pos="1" side="tl" part="whole"/>
            </lu>
          </chunk>
        </out>
      </action>
    </rule>

<rule comment="REGLA: To fix a canten">
      <pattern>
        <pattern-item n="nom"/>
        <pattern-item n="verb"/>
      </pattern>
<action>  
        <choose>
          <when>
            <test>
               <equal>
                  <clip pos="2" side="sl" part="temps"/>
                  <lit-tag v="inf"/>
                </equal>
            </test>
            <out>
          <chunk name="SN">
            <tags>
              <tag><lit-tag v="nbr"/></tag>
            </tags>
	    <lu>
              <clip pos="1" side="tl" part="whole"/>
            </lu>
		<b />
	    <lu>
              <clip pos="2" side="tl" part="whole"/>
	    </lu>
</chunk>
</out>
          </when>
<otherwise>
        <out>
          <chunk name="SN">
            <tags>
              <tag><lit-tag v="nbr"/></tag>
            </tags>
            <lu>
              <clip pos="1" side="tl" part="whole"/>
            </lu>
		<b />
	    <lu>
              <clip pos="2" side="tl" part="whole"/>
              <clip pos="2" side="tl" part="pers"/>
		<lit-tag v="p3"/>
		
              <clip pos="1" side="tl" part="nbr"/>
	    </lu>
          </chunk>
        </out>
</otherwise>
</choose>
      </action>
    </rule>

<rule comment="REGLA: To fix a cantar">
      <pattern>
        <pattern-item n="verb"/>
      </pattern>
      <action>  
        <choose>
          <when>
            <test>
               <equal>
                  <clip pos="1" side="sl" part="temps"/>
                  <lit-tag v="inf"/>
                </equal>
            </test>
            <out>
          <chunk name="SN">
            <tags>
              <tag><lit-tag v="nbr"/></tag>
            </tags>
	    <lu>
              <clip pos="1" side="tl" part="whole"/>
            </lu>
</chunk>
</out>
          </when>
<otherwise>
        <out>
          <chunk name="SN">
            <tags>
              <tag><lit-tag v="nbr"/></tag>
            </tags>
	    <lu>
              <clip pos="1" side="tl" part="whole"/>
              <clip pos="1" side="tl" part="pers"/>
		<lit-tag v="p3"/>
              <lit-tag v="sg"/>
	    </lu>
          </chunk>
        </out>
</otherwise>
</choose>
      </action>
    </rule>

  </section-rules>
</transfer>

