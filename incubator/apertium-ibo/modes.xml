<?xml version="1.0" encoding="UTF-8"?>
<modes>

  <mode name="ibo-twol" install="yes">
    <pipeline>
      <program name="hfst-strings2fst -S"/>
      <program name="hfst-compose-intersect">
        <file name=".deps/ibo.twol.hfst"/>
      </program>
      <program name="hfst-fst2strings"/>
    </pipeline>
  </mode>

  <mode name="ibo-morph" install="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="ibo.automorf.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="ibo-lexc" install="yes">
    <pipeline>
      <program name="hfst-lookup">
        <file name=".deps/ibo.LR.lexc.hfst"/>
      </program>
    </pipeline>
  </mode>

  <mode name="ibo-gener" install="yes">
    <pipeline>
      <program name="lt-proc -g">
        <file name="ibo.autogen.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="ibo-tagger" install="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="ibo.automorf.bin"/>
      </program>
      <program name="cg-proc -w">
        <file name="ibo.rlx.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="ibo-disam" install="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="ibo.automorf.bin"/>
      </program>
      <program name="cg-conv -a"/>
      <program name="vislcg3 --trace --grammar">
        <file name="ibo.rlx.bin"/>
      </program>
    </pipeline>
  </mode>

</modes>

